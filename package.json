{
  "name": "floweret",
  "version": "0.1.2",
  "description": "Runtime type-checking for everyone.",
  "author": "Laurent Payot",
  "license": "MIT",
  "homepage": "https://github.com/laurentpayot/floweret#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/laurentpayot/floweret"
  },
  "keywords": [
    "type-checking",
    "type",
    "check",
    "typed",
    "signature",
    "runtime",
    "flow",
    "javascript",
    "typescript",
    "coffeescript",
    "coffee"
  ],
  "engines": {
    "node": ">=7.6.0"
  },
  "scripts": {
    "build": "rm -rf dist/ && coffee -cmb -o dist/ src/",
    "minify": "uglifyjs -cm --comments -o dist/floweret.min.js -- dist/index.js",
    "build-tests": "coffee -cm test/tests.coffee",
    "build-all": "npm run build && npm run minify && npm run build-tests",
    "test": "npm run build-all && mocha",
    "link": "npm run test && cp package.json dist && cp *.md dist && cd dist && npm link",
    "publish": "npm run test && cp package.json dist && cp *.md dist && cd dist && rm *.js.map && npm publish"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coffeescript": "^2.3.2",
    "mocha": "^5.2.0",
    "sinon": "^6.3.4",
    "uglify-es": "^3.3.9"
  }
}
